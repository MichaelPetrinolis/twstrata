{
    "[tailwindcss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[liquid]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "tailwindCSS.experimental.configFile": {
        "theme": [
            "example/tw/theme.css",
            "example/views/footer.html"
        ],
        "critical": [
            "example/tw/critical.css",
            "example/views/header.html"
        ],
        "componenta": [
            "example/tw/componenta.css"
        ],
        "componentb": [
            "example/tw/componentb.css"
        ],
        "customcss": [
            "example/tw/customcss.css"
        ],
        "ComponentA": [
            "example/tw/ComponentA.css",
            "example/views/componentA.cshtml"
        ],
        "ComponentB": [
            "example/tw/ComponentB.css",
            "example/views/componentB.liquid"
        ]
    }
}